# ══════════════════════════════════════════════════════════════════════════════
# .env.example — Copy to .env and fill in your values
# ══════════════════════════════════════════════════════════════════════════════
# NEVER commit .env to git — it's in .gitignore

# ── MinIO ─────────────────────────────────────────────────────────────────────
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_ENDPOINT=http://localhost:9000

# MinIO Bucket names
BUCKET_BRONZE=bronze
BUCKET_SILVER=silver
BUCKET_GOLD=gold
BUCKET_LANDING=landing-zone
BUCKET_QUALITY=quality-reports

# ── Kafka ─────────────────────────────────────────────────────────────────────
KAFKA_BOOTSTRAP_SERVERS=localhost:29092
KAFKA_TOPIC_TWEETS=social.tweets
KAFKA_TOPIC_ENGAGEMENTS=social.engagements
KAFKA_TOPIC_YOUTUBE=social.youtube
KAFKA_TOPIC_REDDIT=social.reddit
KAFKA_TOPIC_DLQ=social.events.dlq

# ── Airflow ───────────────────────────────────────────────────────────────────
AIRFLOW_ADMIN_USER=admin
AIRFLOW_ADMIN_PASSWORD=admin
AIRFLOW_WEBSERVER_URL=http://localhost:8090

# ── Spark ─────────────────────────────────────────────────────────────────────
SPARK_MASTER_URL=spark://localhost:7077
SPARK_EXECUTOR_MEMORY=2g
SPARK_EXECUTOR_CORES=2

# ── Simulator Settings ────────────────────────────────────────────────────────
SIMULATOR_TWEET_RATE=100          # tweets per second
SIMULATOR_ENGAGEMENT_RATIO=0.05   # 5% of tweets get engagement
SIMULATOR_NUM_USERS=10000         # simulated user base
SIMULATOR_NUM_BRANDS=50           # brand accounts

# ── Pipeline Settings ─────────────────────────────────────────────────────────
PIPELINE_ENV=development          # development | staging | production
PIPELINE_LOG_LEVEL=INFO
PIPELINE_BATCH_INTERVAL_HOURS=3
